Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
ErrorDocument 404 /404.html

RewriteEngine On

# Redirigir todas las solicitudes a la versi贸n sin "www"
RewriteCond %{HTTP_HOST} ^www\.kmbjgeneralcontractor\.com$ [NC]
RewriteRule ^(.*)$ http://kmbjgeneralcontractor.com/$1 [R=301,L]

# Redirigir solicitudes con la extensi贸n ".html" a URLs sin la extensi贸n
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# Si el archivo HTML existe, servirlo sin la extensi贸n
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

